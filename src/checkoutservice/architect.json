{
  "name": "hipster-shop-demo/checkoutservice",
  "description": "Service for processing shopping carts and placing orders",
  "keywords": [
    "gcp",
    "microservices",
    "demo"
  ],
  "dependencies": {
    "hipster-shop-demo/emailservice": "latest",
    "hipster-shop-demo/paymentservice": "latest",
    "hipster-shop-demo/shippingservice": "latest",
    "hipster-shop-demo/currencyservice": "latest",
    "hipster-shop-demo/productcatalogservice": "latest",
    "hipster-shop-demo/cartservice": "latest"
  },
  "parameters": {
    "PRODUCT_CATALOG_SERVICE_ADDR": {
      "description": "host and port of the product catalog service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/productcatalogservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    },
    "SHIPPING_SERVICE_ADDR": {
      "description": "host and port of the shipping service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/shippingservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    },
    "PAYMENT_SERVICE_ADDR": {
      "description": "host and port of the payment service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/paymentservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    },
    "EMAIL_SERVICE_ADDR": {
      "description": "host and port of the email service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/emailservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    },
    "CURRENCY_SERVICE_ADDR": {
      "description": "host and port of the currency service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/currencyservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    },
    "CART_SERVICE_ADDR": {
      "description": "host and port of the cart service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/cartservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    }
  },
  "datastores": {},
  "subscriptions": {},
  "language": "go",
  "interfaces": {
    "main": 8080
  }
}
