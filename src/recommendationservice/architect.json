{
  "name": "hipster-shop-demo/recommendationservice",
  "description": "Service for querying recommended products",
  "keywords": [
    "gcp",
    "microservices",
    "demo"
  ],
  "dependencies": {
    "hipster-shop-demo/productcatalogservice": "latest"
  },
  "parameters": {
    "PRODUCT_CATALOG_SERVICE_ADDR": {
      "description": "host and port of the product catalog service",
      "default": {
        "valueFrom": {
          "dependency": "hipster-shop-demo/productcatalogservice:latest",
          "value": "$HOST:$PORT"
        }
      }
    },
    "ENABLE_PROFILER": {
      "description": "whether or not to enable the profiler",
      "default": "0"
    }
  },
  "datastores": {},
  "language": "python",
  "interfaces": {
    "main": 8080
  }
}
